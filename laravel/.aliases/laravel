
function larastart {
	larastop;	

	if [ ! -d "$PWD/laradock" ]; then
		echo "A 'laradock' folder was not found in '$PWD'";
		return;
	fi 

	DIR=$(pwd);

	function up {
		cd $DIR/laradock;
		docker-compose up -d nginx mysql redis mailhog workspace;
		cd $DIR;
	}

	function down {
		cd $DIR/laradock;
                docker-compose down;
                cd $DIR;
	}

	function workspace {
		cd $DIR/laradock;
		docker-compose exec --user=laradock workspace bash;
		cd $DIR;
	}

	function art {
		cd $DIR/laradock;
		docker-compose exec --user=laradock workspace php artisan $@;
		cd $DIR;
	}
}

function larastop {
	unset -f up 2>/dev/null
	unset -f down 2>/dev/null
	unset -f workspace 2>/dev/null
	unset -f art 2>/dev/null
}
